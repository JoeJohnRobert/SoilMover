<div class="span3">
  <% if user_signed_in? %>
    <div class="well sidebar-nav">
      <h5 class="plate-search-header">Create Report</h5>
      <ul class="nav nav-list">
        <li class="nav-header plate-search">Enter a plate number</li>
        <%= form_tag searches_path, :method => 'get' do %>
          <%= autocomplete_field_tag :search, params[:search], autocomplete_truck_plate_manifest_reports_path,
          {class: "search-query", placeholder: "JHG876", type: "search"} %>
          <%#= text_field_tag :search, params[:search], :id => 'search_field' %>
          <%= submit_tag "Create Report", :name => nil, :class => "search-me", :style => "display: none;" %>
        <% end %>
        <%= link_to "javascript:void(0)" do %>
          <a class="fa fa-file-excel-o btn btn-info", id='export-button'>Export</button>
        <% end %>
        <%= link_to new_facility_path do %>
          <button class="fa fa-list-alt btn btn-warning", id='new_facility-button'>New Facility</button>
        <% end %>
      </ul>
    </div><!--/.well -->
  <% end %>
</div><!--/span-->
